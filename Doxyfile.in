# Doxyfile @PROJECT_VERSION@

#---------------------------------------------------------------------------
# Project
#---------------------------------------------------------------------------

PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF          = "An Efficient Probabilistic 3D Mapping Framework That Embraces the Unknown"
OUTPUT_DIRECTORY       = "@DOXYGEN_OUTPUT_DIR@"

#---------------------------------------------------------------------------
# Input
#---------------------------------------------------------------------------

INPUT                  = "@PROJECT_SOURCE_DIR@/README.md" \
                         "@PROJECT_SOURCE_DIR@/lib"
FILE_PATTERNS          = *.hpp
RECURSIVE              = YES
USE_MDFILE_AS_MAINPAGE = "@PROJECT_SOURCE_DIR@/README.md"

#---------------------------------------------------------------------------
# Extraction
#---------------------------------------------------------------------------

EXTRACT_ALL            = YES
EXTRACT_STATIC         = YES
BUILTIN_STL_SUPPORT    = YES

#---------------------------------------------------------------------------
# Source browsing
#---------------------------------------------------------------------------

SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
STRIP_FROM_PATH        = "@PROJECT_SOURCE_DIR@"
STRIP_FROM_INC_PATH    = "@PROJECT_SOURCE_DIR@"

#---------------------------------------------------------------------------
# HTML output
#---------------------------------------------------------------------------

GENERATE_HTML          = YES
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
FULL_SIDEBAR           = NO
HTML_COLORSTYLE        = AUTO_DARK
SORT_BRIEF_DOCS        = YES
SORT_MEMBERS_CTORS_1ST = YES

#---------------------------------------------------------------------------
# LaTeX output
#---------------------------------------------------------------------------

GENERATE_LATEX         = NO

#---------------------------------------------------------------------------
# Graphs
#---------------------------------------------------------------------------

HAVE_DOT               = @DOXYGEN_HAVE_DOT@
DOT_IMAGE_FORMAT       = svg
DOT_TRANSPARENT        = YES
CLASS_DIAGRAMS         = YES
CLASS_GRAPH            = YES
COLLABORATION_GRAPH    = YES
TEMPLATE_RELATIONS     = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES
